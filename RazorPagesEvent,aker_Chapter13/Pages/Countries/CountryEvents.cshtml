@page
@model RazorPagesEventMaker_Chapter13.CountryEventsModel
@{
    ViewData["Title"] = "CountryEvents";
}

<h1>CountryEvents</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                City
            </th>
            <th>
                DateTime
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.City
                </td>
                <td>
                    @item.DateTime
                </td>
                <td>
                    <a asp-page="/Events/EditEvent" asp-route-id="@item.Id">Edit</a>|
                    <a asp-page="/Events/DetailEvent" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="/Events/DeleteEvent" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="IndexCountry">Back to List of Countries</a>
</div>


